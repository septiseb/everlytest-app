<div class="col">
  <div class="card shadow-sm" style="height: 350px;">
    <img class="bd-placeholder-img card-img-top" src="{{this.url}}" width="100%" height="200px" />
    <div class="card-body">
      <h5 class="card-title header-test">{{this.name}}</h5>
      <p class="card-text">{{this.description}}</p>
      <div class="d-flex justify-content-between align-items-center">
        {{#if this.addExam}}
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        {{/if}}
        <small class="text-muted">{{this.duration}} mins</small>
      </div>
    </div>
  </div>