<div style="padding-bottom:20px;" class="flex items-center my-2">
  <div class="m-3">
    <button
      class="text-gray-800 font-bold rounded border-b-2 border-blue-500 hover:border-blue-800 hover:bg-blue-300 hover:text-white shadow-md py-2 px-6 inline-flex items-center">
      <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd">
        <path d="M11 11v-11h1v11h11v1h-11v11h-1v-11h-11v-1h11z" />
      </svg>
      <a class="ml-2" href="/user-profile" style="color: black;">Guardar</a>
    </button>
  </div>
  <div class="flex justify-center items-center w-full">
    <h1 style="margin-right: 350px;font-size: larger;font-size: 30px;"><strong>{{this.groupTest.name}}</strong></h1>
  </div>
</div>

<form style="display: flex;flex-direction: column;justify-content: center" method="POST"
  action="/user-profile/create-test/{{this.groupTest._id}}">
  <div style="display: flex;justify-content: center" class="mb-3">
    <input style="text-align: center;width:50%" type="email" class="form-control" id="exampleInputEmail1"
      name="testerEmail" placeholder="Agregar correo del aplicante" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2, 4}">
    <button style="width: 20%; margin-left:10px ;" type="submit" class="btn btn-primary">Agregar</button>
  </div>
</form>
{{#if this.errorMessage}}
<p>{{this.errorMessage}}</p>
{{/if}}




<section class="py-1">
  <div class="flex container mx-auto">
    <div style="justify-content: space-evenly;" class="flex flex-wrap px-6">
      {{#each this.aggTest}}
      <div style="width: 400px;display: flex; justify-content: space-around; align-content: space-between;"
        class="w-full lg:w-1/2  md:px-4 lg:px-6 py-3">
        <div class="bg-white hover:shadow-xl border-red-900">
          <div class="">
            <img src="../{{this.url}}" alt="{{name}}" class="h-56 w-full border-white border-8 hover:opacity-25">
          </div>
          <div style="box-sizing: content-box;" class="px-4 py-4 md:px-10">
            <h1 class="font-bold text-lg">
              {{name}}
            </h1>
            <p class="py-4">
              {{description}}
            </p>
            <div style="justify-content: space-evenly;" class="flex pt-8">
              <div class="2/3">
                <div class="text-sm font-medium">
                  <form class="inline-block" action="/user-profile/create-test/{{../this.groupTest._id}}" method="POST">
                    <input type="hidden" name="idTestErase" value="{{this._id}}">
                    <button class="inline-block  text-white 
                            bg-red-400 hover:bg-red-500 duration-300 
                            text-xs font-bold 
                            mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1 
                            opacity-90 hover:opacity-100" type="submit" style="background-color: red;">Quitar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      {{#each this.missingTest}}
      <div style="width: 400px;display: flex; justify-content: space-around; align-content: space-between;"
        class="w-full lg:w-1/2  md:px-4 lg:px-6 py-3">
        <div class="bg-white hover:shadow-xl border-red-900">
          <div class="">
            <img src="../{{this.url}}" alt="" class="h-56 w-full border-white border-8 hover:opacity-25">
          </div>
          <div class="px-4 py-4 md:px-10">
            <h1 class="font-bold text-lg">
              {{name}}
            </h1>
            <p class="py-4">
              {{description}}
            </p>
            <div style="justify-content: space-evenly;" class="flex pt-8">
              <div class="2/3">
                <div class="text-sm font-medium">
                  <form class="inline-block" action="/user-profile/create-test/{{../this.groupTest._id}}" method="POST">
                    <input type="hidden" name="idTestAdd" value="{{this._id}}">
                    <button class="inline-block  text-white 
                            bg-red-400 hover:bg-red-500 duration-300 
                            text-xs font-bold 
                            mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1 
                            opacity-90 hover:opacity-100" type="submit"
                      style="background-color:#0d6efd;">Agregar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>